@model SugarFreeDiet.Models.Recipe

@{
    ViewBag.Title = "New Recipe";
}

<h2>New Recipe</h2>


@using (Html.BeginForm("Create", "Recipes", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-10">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control max-width", @data_lpignore = "true", @autocomplete = "false" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            @Html.LabelFor(model => model.ShortDescription, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-10">
            @Html.TextAreaFor(model => model.ShortDescription, 5, 1, new { @class = "form-control max-width" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-10">
            @Html.TextAreaFor(model => model.Description, 20, 1, new { @class = "form-control max-width" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            @Html.LabelFor(model => model.Ingredients, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-10">
            @Html.TextAreaFor(model => model.Ingredients, 20, 1, new { @class = "form-control max-width" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            @Html.LabelFor(model => model.Directions, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-10">
            @Html.TextAreaFor(model => model.Directions, 20, 1, new { @class = "form-control max-width" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            @Html.LabelFor(model => model.Servings, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-10">
            @Html.TextBoxFor(model => model.Servings, new { @class = "form-control input-number", @Value = "2" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="form-inline col-10">
            @Html.TextBoxFor(model => model.Hours, new { @class = "form-control input-number", @Value = "0" }) hours
            @Html.TextBoxFor(model => model.Minutes, new { @class = "form-control input-number", @Value = "0" }) minutes
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(model => model.Vegetarian) @Html.DisplayNameFor(model => model.Vegetarian)
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(model => model.Vegan) @Html.DisplayNameFor(model => model.Vegan)
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-10">
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(model => model.Active, new { @checked = "checked" }) @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
        </div>
    </div>

    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label" })
    <div class="input-group" style="margin-bottom:10px;">
        <label class="input-group-btn">
            <span class="btn btn-info">
                Browse&hellip; <input type="file" name="file" style="display: none;">
            </span>
        </label>
        <input type="text" class="input-file form-control" readonly>
    </div>

    <div class="form-group">
        <div class="col-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Recipes", "Index")
</div>

<Script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></Script>
